<Window x:Class="Client.CreateRoom"
        xmlns ="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="CreateRoom" Height="720" Width="1280">
    <Grid Background="DimGray">
        <Button Content="Create" HorizontalAlignment="Left" VerticalAlignment="Top" Width="103" RenderTransformOrigin="9.336,7.81" Margin="1062,568,0,0" Height="38"/>
        <ComboBox materialDesign:HintAssist.Hint="Room Type" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Height="88" Margin="39,189,968,412" RenderTransformOrigin="0.568,1.753" FontSize="24" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem>All</ComboBoxItem>
            <ComboBoxItem>General knowledge</ComboBoxItem>
            <ComboBoxItem>Sport</ComboBoxItem>
            <ComboBoxItem>TV</ComboBoxItem>
            <ComboBoxItem>Geography</ComboBoxItem>
            <ComboBoxItem>Math</ComboBoxItem>
        </ComboBox>
        <TextBox materialDesign:HintAssist.Hint="Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="39,81,808,546" FontSize="24" />
    </Grid>
</Window>
