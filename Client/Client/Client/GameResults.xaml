<Page x:Class="Client.GameResults"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="GameResults">

    <Grid Background="White">
        <Button Content="Leave Game" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Margin="1026,599,0,0" Height="88" Click="LeaveGameButton"/>
        <ListView x:Name="Players" HorizontalAlignment="Left" Height="552" VerticalAlignment="Top" Width="623" Margin="33,135,0,0" FontSize="24" SelectionChanged="Players_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Key}" Header="Player" Width="500" />
                    <GridViewColumn DisplayMemberBinding="{Binding Value}" Header="Score" />
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Leaderboard" VerticalAlignment="Top" Height="103" Width="766" Margin="33,32,0,0" FontSize="72" FontWeight="Bold" TextDecorations="{x:Null}" FontStyle="Italic"/>
    </Grid>
</Page>
